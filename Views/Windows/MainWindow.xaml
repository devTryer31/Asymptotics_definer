<Window x:Class="Asymptotics_definer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Asymptotics_definer"
        xmlns:vm="clr-namespace:Asymptotics_definer.ViewModels"
        xmlns:cmd="clr-namespace:Asymptotics_definer.Infrastructure.Commands"
        xmlns:oxy="http://oxyplot.org/wpf"
        mc:Ignorable="d"
        Title="Asymptotics definer" Height="450" Width="800">
    <Window.DataContext>
        <vm:MainWindowViewModel/>
    </Window.DataContext>

    <DockPanel>

        <Menu DockPanel.Dock="Top" Background="LightGray">
            <MenuItem Header="Файл">
                <MenuItem Header="Импортировать данные" CommandParameter="{Binding ImportedFile}">
                    <MenuItem.Command>
                        <cmd:ImportFileCommand/>
                    </MenuItem.Command>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="Помощь"/>
        </Menu>

        <StatusBar DockPanel.Dock="Bottom" Height="20">
            <StatusBarItem>
                <ProgressBar Width="150" Height="12"
                             Margin="5 0 0 0"/>
            </StatusBarItem>
            <StatusBarItem>
                <TextBlock Text="Выбранный файл: ">
                    <TextBlock Text="{Binding ImportedFile.Name, UpdateSourceTrigger=PropertyChanged
                        , FallbackValue='Не выбран'}"/>
                </TextBlock>
            </StatusBarItem>
        </StatusBar>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <GroupBox Grid.Column="0" Header="Входные данные">
                <DataGrid>
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="N" Width="0.5*"/>
                        <DataGridTextColumn Header="O(N)" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </GroupBox>
            <GroupBox Grid.Column="1" Header="График">
                <oxy:Plot>
                    <oxy:Plot.Axes>
                        <oxy:LinearAxis Position="Left"/>
                        <oxy:LinearAxis Position="Bottom"/>

                    </oxy:Plot.Axes>
                </oxy:Plot>
            </GroupBox>
        </Grid>

    </DockPanel>
</Window>
