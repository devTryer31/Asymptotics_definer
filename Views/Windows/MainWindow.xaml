<Window x:Class="Asymptotics_definer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Asymptotics_definer"
        xmlns:vm="clr-namespace:Asymptotics_definer.ViewModels"
        xmlns:cmd="clr-namespace:Asymptotics_definer.Infrastructure.Commands"
        xmlns:oxy="http://oxyplot.org/wpf"
        mc:Ignorable="d"
        Title="Asymptotics definer" Height="450" Width="950">
    <Window.DataContext>
        <vm:MainWindowViewModel/>
    </Window.DataContext>

    <DockPanel>

        <Menu DockPanel.Dock="Top" Background="LightGray">
            <MenuItem Header="Файл">
                <MenuItem Header="Импортировать данные" Command="{Binding OpenFileCommand}"
                          />
                <MenuItem Header="Рассчитать" Command="{Binding ComputeCommand}"/>
            </MenuItem>
            <MenuItem Header="Помощь">
                <MenuItem Header="О работе алгоритма" Command="{Binding OpenGoogleFileCommand}"/>
            </MenuItem>
        </Menu>

        <StatusBar DockPanel.Dock="Bottom" Height="20">
            <StatusBarItem>
                <ProgressBar Width="150" Height="12"
                             Margin="5 0 0 0"/>
            </StatusBarItem>
            <StatusBarItem>
                <TextBlock Text="Выбранный файл: ">
                    <TextBlock Text="{Binding ImportedFile.Name, UpdateSourceTrigger=PropertyChanged
                        , FallbackValue='Не выбран'}"/>
                </TextBlock>
            </StatusBarItem>
        </StatusBar>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="22"/>
                <ColumnDefinition Width="128"/>
                <ColumnDefinition Width="150" MinWidth="120"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <GridSplitter Grid.Column="1" Width="3px"
                          HorizontalAlignment="Left" Margin="125,0,0,0"/>
            <GridSplitter Grid.Column="2" Width="3px"
                          HorizontalAlignment="Left" Margin="147,0,0,0"/>

            <GroupBox Grid.Column="0" Header="Входные данные" Grid.ColumnSpan="2">
                <DataGrid ItemsSource="{Binding MainGraphPoints}" 
                          AutoGenerateColumns="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="N" Width="0.5*"
                                            Binding="{Binding Key}"/>
                        <DataGridTextColumn Header="O(N)" Width="*"
                                            Binding="{Binding Value}"/>
                    </DataGrid.Columns>
                </DataGrid>
            </GroupBox>
            <GroupBox Grid.Column="2" Header="Результат">
                <DataGrid ItemsSource="{Binding MainGraphComputedPoints}"
                          AutoGenerateColumns="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="a*Rn" Width="0.5*"
                                            Binding="{Binding Key}"/>
                        <DataGridTextColumn Header="a*Rn(N)" Width="*"
                                            Binding="{Binding Value, StringFormat=F2}"/>
                    </DataGrid.Columns>
                </DataGrid>
            </GroupBox>
            <GroupBox Grid.Column="3" Header="График">
                <oxy:Plot LegendPosition="LeftTop">
                    <oxy:Plot.Axes>
                        <oxy:LinearAxis Position="Left"
                                    MajorGridlineStyle="Automatic"
                                    MajorGridlineColor="LightGray"/>
                        <oxy:LinearAxis Position="Bottom"
                                    MajorGridlineStyle="Automatic"
                                    MajorGridlineColor="LightGray"/>
                    </oxy:Plot.Axes>
                    
                    <oxy:LineSeries ItemsSource="{Binding MainGraphPoints}"
                                    DataFieldX="Key"
                                    DataFieldY="Value"
                                    Color="Aqua"
                                    Title="O(N)"/>
                    <oxy:LineSeries ItemsSource="{Binding MainGraphComputedPoints}"
                                    DataFieldX="Key"
                                    DataFieldY="Value"
                                    Color="BlueViolet"
                                    Title="{Binding ResultPlotTitle}"/>
                    
                    
                </oxy:Plot>
            </GroupBox>
        </Grid>

    </DockPanel>
</Window>
